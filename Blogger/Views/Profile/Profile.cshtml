@using Blogger.Models;
@model User;
@{
    ViewData["Title"] = $"{Model.Username}";
}
<div class="container mt-3">
    <div class="card mx-auto px-2">
        <div class="card-body">
            <div class="row mt-3">
                <div class="col-md-10 display-4 text-primary"><b>@Model.Username</b></div>
            </div>
            <div class="row border-bottom mt-2"><h3>Profile</h3></div>
            <form method="post" asp-action="Update" asp-controller="Profile">
                <div class="text-left">
                    <label class="mt-3 card-title" asp-for="@Model.Username">Username</label>
                    <input class="form-control" asp-for="@Model.Username" />
                    <label class="card-title" asp-for="@Model.Email">Email</label>
                    <input class="form-control" asp-for="@Model.Email" />
                    <label class="card-title" asp-for="@Model.Password">New Password</label>
                    <input class="form-control" asp-for="@Model.Password" type="password" />
                </div>
                <button class="btn px-4 btn-outline-primary mt-3" type="submit">Update</button>
            </form>
        </div>

    </div>
</div>