@using Blogger.Models;

@{
    Layout = null;
}
@functions{
    Login login = new Login();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Blogger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">Blogger</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="SignUp">Sign Up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <div class="row d-flex flex-column justify-content-center align-items-center text-center">
            <div class="card p-5 col-md-4 align-self-center" style="border-radius:5px">
                <h2 class="h2">Login</h2>
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="text-left">
                            <div class="form-group">
                                <label class="card-title" asp-for="@login.Username">Username</label>
                                <input class="form-control" asp-for="@login.Username" />
                                <span asp-validation-for="@login.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="card-title" asp-for="@login.Password">Password</label>
                                <input class="form-control" type="password" asp-for="@login.Password" />
                                <span asp-validation-for="@login.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <button class="btn-block btn-primary btn-sm mt-3 p-1" type="submit">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Blogger by Bsef18m019
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
