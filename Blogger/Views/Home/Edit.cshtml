@using Blogger.Models;
@model Blog

@{
    ViewData["Title"] = "Edit Blog";
}

<div class="container text-center">
    <div class="h4">Update your Post</div>
    <form class="bg-light" method="post" asp-action="Edit">
        <div class="form-group">
            <label class="col-form-label" asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Content">Content</label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
        <button class="btn btn-dark" type="submit" asp-action="Edit">Save Changes</button>
    </form>
</div>

